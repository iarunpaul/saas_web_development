
<!DOCTYPE html>
<html>
  <head>
    <title>Saasapp</title>
    <%= csrf_meta_tags %>
  
  
  
    <link href="//fonts.googleapis.com/css2?family=Open+Sans:wght@400;700;800&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar-content" aria-controls="main-navbar-content" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
           <%= link_to root_path, class:"navbar-brand"  do %>
            <i class="fa fa-group"></i>
            DevMatch<% end %>
        </div>
        <div class="collapse navbar-collapse" id="main-navbar-content">
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
              <%= link_to "Contact Us", new_contact_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class:"nav-link" %>
            </li>
            <li class="nav-item"></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class= "container">
      <% flash.each do |type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end%>
    </div>
    
      <%= yield %>
    
  </body>
</html>