<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 class="text-center">DevMatch Community</h1>
            <p class="text-center">Welcome to our community. Users must fill up a profile in order to be visible in the community group</p>
            <ul class="list-unstyled">
                <% @users.each do |u| %>
                    <% if u.profile %>
                        <li>
                            <div class="well row <%= cycle('white-bg', '') %>">
                                <div class="col-sm-4">
                                    <%= link_to u do %>
                                        <%= image_tag u.profile.avatar.url, class: "user-index-avatar" %>
                                    <% end %>    
                                </div>
                                <div class="col-sm-8 profile-list-column">
                                    <%= link_to u do %>
                                        <h2><%=  u.profile.first_name %> <%= u.profile.last_name %></h2>
                                    <% end %>    
                                    <p><%=  u.profile.job_title %>
                                        <% if u.plan_id == 2 %>
                                        <span class="label label-danger">PRO</span>
                                        <% end %>
                                    </p>
                                    <!--<%= link_to "Show Profile", u, class: 'btn btn-default' %> Another way to show profile-->
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>    
            </ul>
        </div>
    </div>
</div>